<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F9">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model Package"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/downloaded"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/bd_dl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bd_dl"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/bd_dl_tt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bd_dl_tt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textDownloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downloaded models"
                android:textColor="@android:color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/bd_dl_tt"
                app:layout_constraintBottom_toBottomOf="@id/bd_dl_tt"
                app:layout_constraintStart_toStartOf="@id/bd_dl_tt"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/bd_dl_con1"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/bd_dl_tt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tick1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_tick"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/textModel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model A"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toTopOf="@id/tick1"
                        app:layout_constraintBottom_toBottomOf="@id/tick1"
                        app:layout_constraintStart_toEndOf="@id/tick1"
                        android:layout_marginStart="12dp"/>
                    <TextView
                        android:id="@+id/textNote1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low accuracy. Small model"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="@id/tick1"
                        app:layout_constraintBottom_toBottomOf="@id/tick1"
                        app:layout_constraintStart_toEndOf="@id/tick1"
                        android:layout_marginStart="12dp"/>
                    <ImageView
                        android:id="@+id/bin1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_bin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bd_dl_con2"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/bd_dl_con1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/tick2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_tick"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/textModel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model B"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toTopOf="@id/tick2"
                        app:layout_constraintBottom_toBottomOf="@id/tick2"
                        app:layout_constraintStart_toEndOf="@id/tick2"
                        android:layout_marginStart="12dp"/>
                    <TextView
                        android:id="@+id/textNote2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low accuracy. Small model"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="@id/tick2"
                        app:layout_constraintBottom_toBottomOf="@id/tick2"
                        app:layout_constraintStart_toEndOf="@id/tick2"
                        android:layout_marginStart="12dp"/>
                    <ImageView
                        android:id="@+id/bin2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_bin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/undownloaded"
        android:layout_width="370dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/downloaded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/bd_udl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bd_udl"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/bd_udl_tt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bd_udl_tt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textUndownloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undownloaded models"
                android:textColor="@android:color/black"
                android:textSize="23sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="@id/bd_udl_tt"
                app:layout_constraintBottom_toBottomOf="@id/bd_udl_tt"
                app:layout_constraintStart_toStartOf="@id/bd_udl_tt"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/bd_udl_con1"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/bd_udl_tt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cloud1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_cloud"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/textModel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model C"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toTopOf="@id/cloud1"
                        app:layout_constraintBottom_toBottomOf="@id/cloud1"
                        app:layout_constraintStart_toEndOf="@id/cloud1"
                        android:layout_marginStart="12dp"/>
                    <TextView
                        android:id="@+id/textNote3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low accuracy. Small model"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="@id/cloud1"
                        app:layout_constraintBottom_toBottomOf="@id/cloud1"
                        app:layout_constraintStart_toEndOf="@id/cloud1"
                        android:layout_marginStart="12dp"/>
                    <ImageView
                        android:id="@+id/down1"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_down"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bd_udl_con2"
                android:layout_width="340dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/bd_udl_con1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/cloud2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_cloud"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/textModel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model D"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toTopOf="@id/cloud2"
                        app:layout_constraintBottom_toBottomOf="@id/cloud2"
                        app:layout_constraintStart_toEndOf="@id/cloud2"
                        android:layout_marginStart="12dp"/>
                    <TextView
                        android:id="@+id/textNote4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low accuracy. Small model"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toTopOf="@id/cloud2"
                        app:layout_constraintBottom_toBottomOf="@id/cloud2"
                        app:layout_constraintStart_toEndOf="@id/cloud2"
                        android:layout_marginStart="12dp"/>
                    <ImageView
                        android:id="@+id/down2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_down"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>