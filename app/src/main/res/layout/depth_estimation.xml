<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F9">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Depth Estimation\nModel"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"/>

    <!-- Segmented control -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/buttonToggleModels"
        android:layout_width="340dp"
        android:layout_height="60dp"
        app:singleSelection="true"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMonocular"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Monocular"
        android:gravity="center"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStereo"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Stereo"
        android:gravity="center"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <FrameLayout
        android:id="@+id/modelContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonToggleModels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5">

        <!-- Layout Monocular -->
        <LinearLayout
            android:id="@+id/layoutMonocular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/monoCard"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/back_mono">

                <ImageView
                    android:id="@+id/monoImage"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_monocular"
                    android:contentDescription="Monocular image"/>

                <TextView
                    android:id="@+id/monoDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monocular"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Indoor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="start"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchIndoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/switch_thumb2"
                    android:trackTint="@color/switch_track2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Outdoor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="start"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchOutdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/switch_thumb2"
                    android:trackTint="@color/switch_track2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/statusContainerMono"
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/back_instruction"
                android:layout_marginTop="20dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/statusPrefixMono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current mode:"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/statusModeMono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Monocular . Indoor"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Layout Stereo -->
        <LinearLayout
            android:id="@+id/layoutStereo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/stereoCard"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/back_stereo">

                <ImageView
                    android:id="@+id/stereoImage"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_stereo"
                    android:contentDescription="Stereo image"/>

                <TextView
                    android:id="@+id/stereoDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stereo"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/statusContainerStereo"
                android:layout_width="340dp"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/back_instruction"
                android:layout_marginTop="145dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/statusPrefixStereo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current mode:"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="normal"/>

                <TextView
                    android:id="@+id/statusModeStereo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Stereo"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>